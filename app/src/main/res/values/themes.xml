<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OtpScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="myedittext">
        <item name="android:colorControlNormal">#FFFFFF</item>
        <item name="android:colorControlActivated">#06187A</item>
        <item name="android:colorControlHighlight">#ffffff</item>
        <item name="android:colorAccent">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>
    <style name="changeshape" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="imgrad" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="imgrad3" parent="">
        <item name="cornerSize">20%</item>
    </style>
    <style name="imgrad4" parent="">
        <item name="cornerSize">10%</item>
    </style>
    <style name="card" parent="">
        <item name="cornerSize">60%</item>
    </style>
    <style name="Theme.OtpScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.OtpScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.OtpScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>