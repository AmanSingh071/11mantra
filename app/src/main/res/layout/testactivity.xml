<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnAstroDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Astro Details"
        android:padding="16dp"
        android:background="@color/abc_search_url_text_normal"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtAstroDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Response will be here soon.."

        android:textColorHint="@color/button_material_dark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAstroDetails"
        android:padding="24dp"
        android:gravity="center"
        />
</LinearLayout>