<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.signupastrologers"

    android:background="@color/black"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"



        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
  >





        <TextView
            android:id="@+id/text22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:layout_marginTop="67dp"


            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_search"
            android:text="Create a new account"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/astroproimg"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="120dp"
            />
        <TextView
            android:id="@+id/textVie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="Add Profile Pic"
            android:layout_marginLeft="90dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/emailsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:background="@drawable/bg_search"
            android:padding="15dp"

            android:ems="10"
            android:textColorHint="@color/white"
            android:theme="@style/myedittext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />
        <EditText
            android:id="@+id/usernamesignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_search"
            android:padding="15dp"
            android:ems="10"
            android:textColorHint="@color/white"
            android:theme="@style/myedittext"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/passwordsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="@color/white"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:padding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/confirmpasswordsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="@color/white"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:padding="15dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"

            android:minHeight="48dp" />
        <TextView
            android:id="@+id/text242"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:layout_marginTop="67dp"


            android:text="Skill Details"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"

            />



        <EditText
            android:id="@+id/langsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:background="@drawable/bg_search"
            android:padding="15dp"
            android:ems="10"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:hint="enter languages you know"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />
        <EditText
            android:id="@+id/professionsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_search"
            android:padding="15dp"
            android:ems="10"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:hint="Enter your Professions"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/expsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:hint="Experience"
            android:padding="15dp"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/ratesignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:hint="Rate you charge"
            android:padding="15dp"

            android:minHeight="48dp" />
        <EditText
            android:id="@+id/chatepricesignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:padding="15dp"
            android:hint="Rate you charge for chat per min"
            android:inputType="textPassword"

            android:minHeight="48dp" />
        <EditText
            android:id="@+id/callpricesignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:hint="Rate you charge for call per min"
            android:padding="15dp"

            android:minHeight="48dp" />

        <EditText
            android:id="@+id/videosignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:hint="Rate you charge for video call per min"
            android:padding="15dp"

            android:minHeight="48dp" />
        <EditText
            android:id="@+id/aboutastrosignup"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="23dp"
            android:textColorHint="#AEA8A8"
            android:theme="@style/myedittext"
            android:background="@drawable/bg_search"
            android:ems="10"
            android:hint="Tell us Something About youreself"
            android:padding="15dp"

            android:minHeight="48dp" />






        <Button
            android:id="@+id/btnsignup"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="128dp"
            android:textStyle="bold"
            android:background="@drawable/bg_search"

            android:text="Sign up"
            android:textColor="@color/white" />

        <!--<TextView
            android:id="@+id/Signin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_search"
            android:gravity="center_horizontal"

            android:text="Already have a account? Sign In"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />-->
    </LinearLayout>

    </LinearLayout>
</ScrollView>


