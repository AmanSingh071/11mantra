<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:padding="5dp"

    android:backgroundTint="#FF0303"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"


    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/cardblog"
        android:layout_height="wrap_content"
        android:elevation="952dp"
        android:background="@color/red"
         android:outlineAmbientShadowColor="@color/black"





        android:backgroundTint="#1C1C1C"

        app:cardCornerRadius="10dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/blogimg"
        android:layout_width="230dp"
             android:theme="@style/imgrad4"
        android:layout_height="120dp"


        app:strokeWidth="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

        <TextView
            android:id="@+id/blogtitle"
            android:textColor="#FFFFFF"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="name \n"
            android:textSize="13sp"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:id="@+id/blogauthor"
            android:textColor="#959292"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="author "
           android:gravity="left"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="180dp"
            android:textSize="10sp"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:id="@+id/blogdate"
            android:textColor="#959292"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="name"
            android:gravity="right"
            android:textSize="10sp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="137dp"
            />
    </androidx.cardview.widget.CardView>




</LinearLayout>