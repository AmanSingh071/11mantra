<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="@color/black"
    android:backgroundTint="@color/black"

    android:layout_marginTop="10dp"
    android:paddingTop="10dp"


    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="194dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardv"
        android:background="@color/black"
      android:backgroundTint="#1F2020"
        >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Imagehoro"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:strokeColor="#2598CC"
        app:strokeWidth="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imgg"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/changeshape" />

    <TextView
        android:id="@+id/nameame"



        android:textColor="#FFFFFF"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="name \n"
        android:textAlignment="center"

        android:layout_marginTop="110dp"
        android:layout_marginLeft="35dp"
        />
        <TextView
            android:id="@+id/astrorate"



            android:textColor="#FFFFFF"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="rate \n"
            android:textAlignment="center"

            android:layout_marginTop="130dp"
            android:layout_marginLeft="35dp"
            />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:text="Connect"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:textColor="#197730"
            android:background="@drawable/bg_button"
            android:padding="5dp"
            android:textSize="13sp"

            />

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>