<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    tools:context=".fragments.mainhomescreenfrag">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/lisearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/search"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/bg_search"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:hint="Search astrologers,astromail products"
                android:padding="10dp"
                android:textColorHint="#9C9898"
                android:textSize="14sp"
                android:theme="@style/myedittext" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="vertical"

            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/lisearch"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:backgroundTint="#1F2020"
                android:background="@drawable/bg_search"
                >


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:id="@+id/recyhoro"
                android:layout_height="wrap_content" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1F2020"
                android:background="@drawable/bg_search"
                >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:id="@+id/imgchat"
                app:shapeAppearanceOverlay="@style/imgrad3"
                android:layout_marginTop="13dp"
                android:src="@drawable/img_166"
                />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Astrologers"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp"

                android:id="@+id/recyastro"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest from blog"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:background="#151515"
                android:layout_marginTop="13dp"


                android:id="@+id/recyblog"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Testimonials"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"

                android:layout_marginTop="13dp"
                android:id="@+id/recyreview"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Astrologers"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:background="@drawable/bg_search"
                android:layout_marginTop="13dp"
                android:id="@+id/recyliveastro"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >





                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:shapeAppearanceOverlay="@style/imgrad3"



                    android:tint="#8C8E8F"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/lockme"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Private and \n Confidential"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:shapeAppearanceOverlay="@style/imgrad3"
                    android:layout_marginTop="13dp"


                   android:tint="#8C8E8F"


                    android:layout_marginLeft="25dp"
                    android:src="@drawable/perspnveri"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="Verified \n Astrologers"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:shapeAppearanceOverlay="@style/imgrad3"
                    android:layout_marginTop="13dp"

                    android:tint="#8C8E8F"


                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ggi"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Secure \n Payments"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <TextView
    android:layout_width="180dp"
    android:layout_height="50dp"
        android:gravity="center"
    android:layout_marginTop="600dp"
    android:text="Chat with Astrologer"
    android:textAlignment="center"
    android:textStyle="bold"
        android:id="@+id/chathomebtn"
    android:layout_marginLeft="15dp"

    android:textColor="#000000"
    android:background="@drawable/chatwithastrobg"
    android:padding="5dp"
    android:textSize="13sp"

    android:drawableStart="@drawable/cccc"
    >

</TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="600dp"
            android:id="@+id/callhomebtn"
            android:text="Call with Astrologer"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"

            android:textColor="#000000"
            android:background="@drawable/chatwithastrobg"
            android:padding="5dp"
            android:textSize="13sp"

            android:drawableStart="@drawable/ic_baseline_call_24"
            >

        </TextView>
    </LinearLayout>
</RelativeLayout>